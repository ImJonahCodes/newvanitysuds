---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@/components/sections/ContactSection.astro";
import { SITE } from "@/data_files/constants";
import ServicesBlock from "@/components/sections/services/services.astro"

const pageTitle: string = `Services | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://vanitysuds.com",
    "@type": "WebPage",
    "@id": "https://vanitysuds.com/services",
    "url": "https://vanitysuds.com/services",
    "name": "Services | Vanity Suds",
    "description":
      "Discover the amazing services that Vanity Suds offers and why they are the best!",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://vanitysuds.com",
      "name": "Vanity Suds Detailing",
      "description":
        "Vanity Suds offers top-tier mobile detailing services and expert ceramic coating services for your vehicle. Start exploring and contact our team for superior quality and reliability.",
    },
    "inLanguage": "en-US"
  }}
>
  
<ServicesBlock />


</MainLayout>