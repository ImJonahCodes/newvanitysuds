<div x-data="{ isOpen: localStorage.getItem('cardDismissed') !== 'true' }" x-init="() => { if (!isOpen) { document.getElementById('cookies-with-stacked-buttons').style.display = 'none'; } window.addEventListener('beforeunload', function() { localStorage.removeItem('cardDismissed'); }); }" class="fixed bottom-0 end-0 z-[60] sm:max-w-sm w-full mx-auto p-6" x-show="isOpen">
    <!-- Card -->
    <div id="cookies-with-stacked-buttons" class="p-4 bg-white/[.6] backdrop-blur-lg rounded-xl shadow-2xl dark:bg-slate-900/[.6] dark:shadow-black/[.7]">
        <div class="flex justify-between items-center gap-x-5 sm:gap-x-10">
            <h2 class="font-semibold text-gray-800 dark:text-white">
                SPRING DEAL
            </h2>
            <button @click="isOpen = false; localStorage.setItem('cardDismissed', 'true')" type="button" class="inline-flex rounded-full p-2 text-gray-500 hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-gray-600 dark:hover:bg-gray-800 dark:text-gray-300">
                <span class="sr-only">Dismiss</span>
                <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
            </button>
        </div>
        <p class="mt-2 text-sm text-gray-800 dark:text-gray-200">
            Get ready to blossom this spring with our unbeatable spring deal - let us revive your vehicle's shine, so you can hit the road in style!
        </p>
        <div class="mt-5 mb-2 w-full flex gap-x-2 text-center">
            <button type="button" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-primary dark:text-white dark:hover:bg-gray-800">
                Use Code 
                <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-lg text-xs font-medium bg-blue-100 text-primary dark:bg-blue-800/30 dark:text-primary">SPRING</span>
                For 15% Off!
            </button>
        </div>
        <div class="grid w-full">
            <div class="flex justify-center items-center w-full">
                <a type="button" href="/book" class="w-full py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">
                    BOOK NOW
                </a>
            </div>
        </div>
    </div>
    <!-- End Card -->
</div>
